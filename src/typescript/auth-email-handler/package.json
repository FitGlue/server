{
    "name": "auth-email-handler",
    "version": "1.0.0",
    "description": "Sends branded authentication emails (verification, password reset, email change)",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "gcp-build": "npm run build",
        "test": "jest",
        "lint": "eslint src --ext .ts",
